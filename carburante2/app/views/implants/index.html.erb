<% if @implant.count('Implants.idImpianto') > 0 %>
    <h1> <%= @implant.count('Implants.idImpianto') %> impianti trovati </h1>
<% else %>
    <h1> Nessun impianto trovato </h1>
<% end %>

<!--Lo stile va tolto da qui e messo in assets/stylesheets-->
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
    }
</style>

<% @implant.each do |i| %>
    <table style="width:100%">
        <tr>
            <td><%= i.Bandiera %></td>
            <td><%= i.Gestore %></td>
            <td><%= i.prezzo %></td>
            <td><%= i.descCarburante %></td>
            <td><%= i.Indirizzo %></td>
            <td><%= i.Comune %></td>
            <td><%= i.Provincia %></td>
            <td><%= link_to 'Dettagli', implant_path(i) %></td>
        </tr>
    </table>
<% end %>