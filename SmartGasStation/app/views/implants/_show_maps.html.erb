    <!-- Titolo -->
    <div class="my-3 py-3">
        <br>
        <h3 class="mbr-section-subtitle mbr-fonts-style display-2" style="color: white; text-align: center;">MAPS</h3>
        <p class="lead"> <%= @Indirizzo.humanize %>, <%= @Comune.humanize %> (<%= @Provincia %>) </p>
