<div class="container-table100">
    <div class="wrap-table100">
        <div class="table">

            <div class="row header">
                <div class="cell"> Bandiera</div>
                <div class="cell"> Indirizzo</div>
                <div class="cell"> Dettagli</div>
            </div>

            <% @stazioniVicine.each do |i| %>
                <div class="row">
                    <div class="cell" data-title="Bandiera"> <%= i.Bandiera.upcase %> </div>
                    <div class="cell" data-title="Indirizzo">      <%= i.Indirizzo.humanize[0..-7] %>
                        ,<%= i.Comune.humanize %> (<%= i.Provincia %>)
                    </div>
                    <div class="cell" data-title="Dettagli"> <%= link_to 'Dettagli', implant_path(i) %>  </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
