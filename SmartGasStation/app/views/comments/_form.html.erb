<h4>Add a comment</h4>

<%= form_for [@parent, @parent.comments.new] do |form| %>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit "Crea recensione" %>
    </p>
<% end %>