<body class="devise" style="padding-top: 100px;">

<div align="center">
    <h2>Sign Up</h2><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control profileInput" %>
        </div>

        <br>
        <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
                <em>(minimo <%= @minimum_password_length %> caratteri)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control profileInput" %>
        </div>

        <br>
        <div class="field">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password", class: "form-control" %>
        </div>

        <div class="field">
            <%= f.label "Gestore", :for => "checkbox" %>
            <%= f.check_box(:admin, {value: "1", checked: false, :class => 'profileCheckBox', :id => "checkbox"}) %>
        </div>

        <div class="actions">
            <br>
            <%= f.submit "Crea account", :class => 'btn btn-lg btn-primary btn-block' %>
        </div>
    <% end %>
    <br>
    <%= render "users/shared/links" %>
</div>
</body>