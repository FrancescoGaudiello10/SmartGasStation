<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Modello</th>
      <th>Targa</th>
      <th>Capacita serbatoio</th>
      <th>Tipo carburante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.user_id %></td>
        <td><%= car.modello %></td>
        <td><%= car.targa %></td>
        <td><%= car.capacita_serbatoio %></td>
        <td><%= car.tipo_carburante %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

